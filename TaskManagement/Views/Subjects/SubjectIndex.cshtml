@{
}

@model IEnumerable<TaskManagement.Models.SubjectModels>

@{
    ViewData["Title"] = "Subject Information";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="SubjectCreate" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            @* <th>Id</th> *@
            <th>Subject</th>
            <th>Subject Code</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @* <td>@item.Id</td> *@
                <td>@item.Subject</td>
                <td>@item.SubjectCode</td>
                <td>
                    <a asp-action="SubjectEdit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="SubjectDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a> |
                    <a asp-action="SubjectDelete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>