@model TaskManagement.Models.DepartmentModels

<h1>Department Information</h1>

<form asp-action="DepartmentCreate" asp-controller="Department" method="post" enctype="multipart/form-data">
  <label for="deptName">Department Name</label>
    <input type="text" id="deptName" asp-for="DepartmentName" required /><br /><br />

    <label for="section">Section</label>
    <input type="text" id="section" asp-for="Section" required /><br /><br />

    <label for="faculty">Faculty</label>
    <input type="text" id="faculty" asp-for="Faculty" /><br /><br />

    <label for="subject">Subject</label>
    <input type="text" id="subject" asp-for="Subject" /><br /><br />

    <input type="submit" class="btn btn-primary" value="Submit" />
    <a asp-action="DepartmentIndex" class="btn btn-secondary">Back to List</a>
</form>